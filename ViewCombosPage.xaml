<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrickingApp.ViewCombosPage"
             Title="View Combos"
             BackgroundColor="#F5F5F5">

    <StackLayout Padding="15" Spacing="10">
        <Label Text="Your Combos"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,20" />

        <CollectionView x:Name="CombosCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnComboSelected"
                        ItemsLayout="VerticalList"
                        Margin="0,0,0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="10,5"
                        Padding="15"
                        CornerRadius="12"
                        HasShadow="True"
                        BackgroundColor="White">

                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Title}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#333" />

                            <Label Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="#666"
                                   LineBreakMode="TailTruncation" />
                        </VerticalStackLayout>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectComboCommand}"
                                                  CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
