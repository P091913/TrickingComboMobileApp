<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrickingApp.AddTrickPage"
             Title="Add Trick">

    <StackLayout Padding="20" Spacing="15">

        <Label Text="Add a New Trick" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="TrickNameEntry" Placeholder="Trick Name" />
        <Editor x:Name="TrickDescriptionEditor" Placeholder="Trick Description" HeightRequest="100" />

        <Button Text="Save Trick" Clicked="OnSaveTrickClicked" />

    </StackLayout>
</ContentPage>
