<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrickingApp.ComboDetailsPage"
             Title="Edit Combo"
             BackgroundColor="#F8F9FA">

    <!-- ðŸŸ© NEW: Wrap everything in a Grid with a TapGestureRecognizer -->
    <Grid>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped" />
        </Grid.GestureRecognizers>

        <!-- â¬‡ï¸ Moved ScrollView into the Grid -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- (rest of your original layout unchanged) -->

                <!-- Title & Description -->
                <Frame BackgroundColor="White" CornerRadius="16" Padding="20" HasShadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="ComboTitleLabel"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#222" />
                        <Label x:Name="ComboDescriptionLabel"
                               FontSize="16"
                               TextColor="#666"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Add Trick -->
                <Frame BackgroundColor="White" CornerRadius="16" Padding="20" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Add Trick to Combo"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#111" />

                        <SearchBar x:Name="TrickSearchBar"
                                   Placeholder="Search for a trick..."
                                   FontSize="14"
                                   TextColor="#333"
                                   PlaceholderColor="#999"
                                   BackgroundColor="#F0F2F5"
                                   TextChanged="OnTrickSearchTextChanged" />

                        <CollectionView x:Name="TrickSuggestionsView"
                                        SelectionMode="Single"
                                        SelectionChanged="OnTrickSelected"
                                        HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="12" CornerRadius="12" BackgroundColor="#F7F7F7" Margin="0,5" HasShadow="False">
                                        <VerticalStackLayout Spacing="4">
                                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="#222"/>
                                            <Label Text="{Binding Description}" FontSize="13" TextColor="#777" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Current Tricks -->
                <Frame BackgroundColor="White" CornerRadius="16" Padding="20" HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Current Tricks in Combo:"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#111" />

                        <CollectionView x:Name="ComboTricksView"
                                        ItemsSource="{Binding ComboTricks}"
                                        SelectionMode="None"
                                        HeightRequest="300">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="10" CornerRadius="12" BackgroundColor="#F2F2F2" Margin="0,5" HasShadow="False">
                                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   FontSize="16"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="StartAndExpand" />
                                            <Button Text="â†‘" FontSize="14" BackgroundColor="#DDEBFF" TextColor="#007AFF" WidthRequest="40" CornerRadius="10" CommandParameter="{Binding .}" Clicked="OnMoveUpClicked" />
                                            <Button Text="â†“" FontSize="14" BackgroundColor="#DDEBFF" TextColor="#007AFF" WidthRequest="40" CornerRadius="10" CommandParameter="{Binding .}" Clicked="OnMoveDownClicked" />
                                            <Button Text="âœ•" FontSize="14" BackgroundColor="#FF3B30" TextColor="White" WidthRequest="60" CornerRadius="10" CommandParameter="{Binding .}" Clicked="OnRemoveTrickClicked" />
                                        </HorizontalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Save Button -->
                <Button Text="Save Combo"
                        FontSize="18"
                        BackgroundColor="#34C759"
                        TextColor="White"
                        CornerRadius="14"
                        HeightRequest="50"
                        Clicked="OnSaveClicked"
                        Margin="0,20,0,0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
