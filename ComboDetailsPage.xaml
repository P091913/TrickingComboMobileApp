<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrickingApp.ComboDetailsPage"
             Title="Combo Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label x:Name="ComboTitleLabel" FontAttributes="Bold" FontSize="24" />
            <Label x:Name="ComboDescriptionLabel" FontSize="14" TextColor="Gray" />

            <Label Text="Tricks:" FontAttributes="Bold" FontSize="18" />

            <StackLayout x:Name="TricksStackLayout" />

            <Button Text="+ Add Trick" BackgroundColor="Green" TextColor="White" Clicked="OnAddTrickClicked" />
            <Button Text="Save Combo" BackgroundColor="Blue" TextColor="White" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
